# Cursor Rules Configuration
# This file configures how Cursor should handle certain files

# Never ignore environment files
- .env
- .env.local
- .env.development.local
- .env.test.local
- .env.production.local

# Always show these files in explorer
show_files:
  - "*.env"
  - "*.env.local"

# File associations
associations:
  "*.env": "dotenv"
  "*.env.local": "dotenv" 